{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier/react"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            {
              "extensions": [".ts",".tsx"]
            }
        ],
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
        ],
        "no-use-before-define":"off",
        "quotes":"off",
        "global-require": "off",
        "no-unused-vars": "warn",
        "no-plusplus": "off",  
        "no-ternary": "off",
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies":"off"
    }
}
